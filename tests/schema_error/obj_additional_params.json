{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "root",
    "description": "Some demo structure for demoing.",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "vegetable"
    ],
    "properties": {
        "vegetable": {
            "type": "object",
            "required": [
                "name",
                "is_good"
            ],
            "properties": {
                "name": {
                    "type": "string",
                    "description": "The name of the vegetable.",
                    "maxLength": 8
                },
                "is_good": {
                    "type": "boolean",
                    "description": "Is the vegetable any good?"
                }
            }
        }
    }
}
